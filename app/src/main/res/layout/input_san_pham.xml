<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_idShoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sản phẩm: "
            android:textColor="@color/purple_500"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/txt_nameShoe"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_idShoe"
            android:layout_marginTop="20dp"
            android:text="Tên sản phẩm: "
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txt_idShoe"
            android:text="Size"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_prire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nameShoe"
            android:layout_marginTop="20dp"
            android:text="Gía"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_SoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_idShoe"
            android:layout_marginStart="-29dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/txt_size"
            android:text="Số lượng "
            android:textSize="15dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>