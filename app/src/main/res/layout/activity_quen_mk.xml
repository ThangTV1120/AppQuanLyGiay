<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_quenMK"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            android:layout_width="372dp"
            android:layout_height="81dp"
            android:text="Quên mật khẩu"
            android:textAllCaps="false"
            android:textSize="50dp"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="113dp" />

        <EditText
            android:id="@+id/editTextTenDKQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/editTextMatKhauDKQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/editTextNhapLaiMatKhauDkQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnThayDoi"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Đổi Mật khẩu"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnQuayLaiQuenMK"
                android:layout_width="192dp"
                android:layout_height="78dp"

                android:layout_marginStart="10dp"

                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/btnThayDoi"
                android:onClick="onclickQuayLaiMain"
                android:text="Quay Lại"
                android:textAllCaps="false" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>