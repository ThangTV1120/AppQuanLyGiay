<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.activity_dangky">


    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="430dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textAllCaps="false"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="113dp" />

        <EditText
            android:id="@+id/editTextHoTenDK"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:hint="Nhập họ tên"
            android:inputType="textPersonName"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/editTextTenDK"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:textSize="28sp" />


        <EditText
            android:id="@+id/editTextMatKhauDK"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/editTextNhapLaiMatKhauDk"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnDangKyTK"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:text="Đăng ký" />

            <Button
                android:id="@+id/btnQuayLaiDK"
                android:layout_width="150dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:text="Quay lại" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>