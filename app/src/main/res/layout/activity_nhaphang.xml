<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

   <EditText
       android:id="@+id/txtMaSP"
       android:hint="Mã sản phẩm"
       android:layout_width="match_parent"
       android:inputType="text"
       android:layout_height="60dp">
   </EditText>

  <EditText
      android:id="@+id/txtTenSP"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:inputType="text"
      android:layout_below="@+id/txtMaSP"
      android:layout_marginTop="2dp"
      android:hint="Tên sản phẩm">

  </EditText>


  <Spinner
      android:id="@+id/ListSize"

      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_below="@+id/txtTenSP"
      android:layout_marginTop="1dp"
      android:scrollbarSize="30dp"
      tools:ignore="SpeakableTextPresentCheck" />

  <EditText
      android:id="@+id/txtSoLuong"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_below="@id/txtGia"
      android:hint="Số lượng"
      android:inputType="number"></EditText>

  <EditText
      android:id="@+id/txtGia"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_below="@id/ListSize"
      android:hint="Giá"
      android:inputType="number"></EditText>

    <Button
        android:id="@+id/btnThemHang"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtSoLuong"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:text="Thêm"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btnHuyThemHang"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtSoLuong"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/btnThemHang"
        android:text="Hủy"
        android:textSize="20dp" />
</RelativeLayout>