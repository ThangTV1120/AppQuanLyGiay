<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_spNhap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_xoaSP"
            android:layout_width="47dp"
            android:layout_height="36dp"
            android:layout_below="@+id/header"
            android:layout_alignEnd="@+id/header"

            android:layout_marginTop="9dp"
            android:layout_marginEnd="-23dp"
            android:src="@drawable/ic_baseline_highlight_off_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header"
           android:gravity="center">

            <TextView
                android:id="@+id/textMaSP_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sảm phẩm"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textSP_input"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Tên sảm phẩm"
                android:textAllCaps="false"

                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textGiaNhap_input"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:text="Giá:"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textSize_input"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:text="Size:"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSoLuong_input"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số Lượng: "
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>